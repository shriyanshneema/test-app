<div class="text-center mt-5">
  <% if @current_user %>
    <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-danger" %>
    <%= link_to "View Profile", user_path(@current_user), class: "btn btn-info" %>
    <%= link_to "Add Post", new_post_path, class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Sign Up", new_registration_path, class: "btn btn-primary" %>
    <%= link_to "Log In", new_session_path, class: "btn btn-primary" %>
  <% end %>
</div>

<% if @posts.present? %>
  <div class="row">
    <% @posts.each do |post| %>
        <div class="col-md-4">
            <div class="card mx-auto w-50 mt-5">
              <article class="card-body">
                <div class="mt-3">
                  <%= render "details", post: post %>
                  <p> Description:- <%= link_to post.description, post_path(post) %> </p>
                </div>
              </article>
            </div>
        </div>
    <% end %>
  </div>
<% else %>
  <div class="mt-4 p-5 bg-info text-white rounded">
    <h1>oops currently no post available</h1>
    <p>please add posts</p>
  </div>
<% end %>

<div class="mt-5">
  <%== pagy_nav_bootstrap_compact @pagy %>
</div>