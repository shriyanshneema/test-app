<div class="card mx-auto w-25 mt-5">
  <article class="card-body">
    <%= link_to "Back", :back, class: "btn btn-primary" %>
    <div class="mt-3">
      <p> Comment:- <%= @comment.body %> </p>
      <%= render "details", comment: @comment %>
    </div>
    <% if @current_user && @comment.author_id == @current_user.id %>
      <%= link_to "Edit", edit_comment_path(@comment), class: "btn btn-secondary" %>
      <%= link_to "Delete", comment_path, method: :delete, class: "btn btn-danger" %>
    <% end %>
  </article>
</div>
